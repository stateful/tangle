{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "./dist",
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "target": "ES2020",
    "outDir": "dist",
    "lib": ["es6", "dom"],
    "rootDir": "src",
    "strict": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "ts-node": {
    "files": true
  },
  "exclude": ["node_modules", "dist", "test"]
}
