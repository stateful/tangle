{
  "name": "tangle",
  "version": "0.1.2",
  "description": "Minimal state-management implementation to connect insular views in VS Code",
  "author": "Sebastian Tiedtke <sebastian@stateful.com>",
  "license": "Apache-2.0",
  "contributors": [
    "Christian Bromann <christian@stateful.com>"
  ],
  "engines": {
    "node": ">=12.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/stateful/tangle.git"
  },
  "keywords": [],
  "bugs": {
    "url": "https://github.com/stateful/tangle/issues"
  },
  "type": "module",
  "types": "dist/esm/vrx.d.ts",
  "main": "dist/cjs/vrx.js",
  "module": "dist/esm/vrx.js",
  "exports": {
    "./webviews": {
      "require": "./dist/cjs/webviews.js",
      "import": "./dist/esm/webviews.js"
    },
    "./worker_threads": {
      "require": "./dist/cjs/worker_threads.js",
      "import": "./dist/esm/worker_threads.js"
    },
    "./iframes": {
      "require": "./dist/cjs/iframes.js",
      "import": "./dist/esm/iframes.js"
    },
    "./webworkers": {
      "require": "./dist/cjs/webworkers.js",
      "import": "./dist/esm/webworkers.js"
    },
    ".": {
      "require": "./dist/cjs/vrx.js",
      "import": "./dist/esm/vrx.js"
    }
  },
  "files": [
    "dist",
    "webviews",
    "worker_threads",
    "iframes",
    "webworkers"
  ],
  "scripts": {
    "build": "run-s compile",
    "compile": "run-p compile:*",
    "compile:esm": "rollup -c ./rollup.esm.js",
    "compile:cjs": "rollup -c ./rollup.cjs.js",
    "clean": "rm -r dist",
    "prepare": "husky install",
    "release": "release-it --github.release",
    "release:ci": "yarn release -- --ci --npm.skipChecks --no-git.requireCleanWorkingDir",
    "release:patch": "yarn release -- patch",
    "release:minor": "yarn release -- minor",
    "release:major": "yarn release -- major",
    "test": "run-s test:*",
    "test:lint": "eslint src test",
    "test:unit": "tap"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@rollup/plugin-typescript": "^8.3.0",
    "@types/jsdom": "^16.2.13",
    "@types/node": "^16.11.7",
    "@types/tap": "^15.0.5",
    "@types/vscode": "^1.62.0",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "eslint": "^8.1.0",
    "husky": "^7.0.4",
    "jsdom": "^18.1.0",
    "mocha": "^9.1.3",
    "npm-run-all": "^4.1.5",
    "release-it": "^14.11.7",
    "rollup": "^2.58.3",
    "rollup-plugin-cleanup": "^3.2.1",
    "rollup-plugin-multi-input": "^1.3.1",
    "rollup-plugin-terser": "^7.0.2",
    "tap": "^15.0.10",
    "ts-node": "^10.4.0",
    "tslib": "^2.3.1",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "rxjs": "^7.4.0",
    "web-worker": "^1.2.0"
  }
}
